<Window x:Class="GIPractice.Wpf.PatientPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:GIPractice.Wpf.Localization"
        Title="{loc:Loc Table=Patients Field=Title}"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.WindowBackground}"
        Foreground="{DynamicResource Brush.WindowForeground}">

    <DockPanel>

        <!-- Optional bottom status bar -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="8">
            <Button Content="Cancel"
                    Width="80"
                    Margin="4,0,0,0"
                    IsCancel="True" />
        </StackPanel>

        <!-- Content is resolved via DataTemplate (PatientSearchViewModel → PatientSearchView) -->
        <ContentControl Content="{Binding}"
                        Background="{DynamicResource Brush.PanelBackground}" />
    </DockPanel>
</Window>
