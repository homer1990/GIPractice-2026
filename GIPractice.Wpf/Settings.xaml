<Window x:Class="GIPractice.Wpf.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:GIPractice.Wpf.Localization"
        Title="{loc:Loc Key=Settings_Title}"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.WindowBackground}"
        Foreground="{DynamicResource Brush.WindowForeground}">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="8">
            <Button Content="Cancel"
                    Width="80"
                    Margin="4,0,0,0"
                    IsCancel="True" />
            <Button Content="OK"
                    Width="80"
                    Margin="4,0,0,0"
                    IsDefault="True"
                    Click="Ok_Click" />
        </StackPanel>

        <!-- content resolved via DataTemplate: SettingsViewModel -> SettingsView -->
        <ContentControl Content="{Binding}" />
    </DockPanel>
</Window>
