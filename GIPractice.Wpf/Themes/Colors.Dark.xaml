<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Very basic dark palette for now -->
    <Color x:Key="Color.WindowBackground">#FF202020</Color>
    <Color x:Key="Color.WindowForeground">#FFF0F0F0</Color>
    <Color x:Key="Color.PanelBackground">#FF303030</Color>
    <Color x:Key="Color.Border">#FF505050</Color>
    <Color x:Key="Color.Accent">#FF2D89EF</Color>
    <Color x:Key="Color.AccentHover">#FF5CA0FF</Color>
    <Color x:Key="Color.ErrorText">#FFFF6A6A</Color>

    <Color x:Key="Color.GridHeaderBackground">#FF383838</Color>
    <Color x:Key="Color.GridHeaderForeground">#FFF0F0F0</Color>
    <Color x:Key="Color.GridRowBackground">#FF303030</Color>
    <Color x:Key="Color.GridRowAltBackground">#FF353535</Color>
    <Color x:Key="Color.GridRowSelectedBackground">#FF3F5F80</Color>

    <SolidColorBrush x:Key="Brush.WindowBackground" Color="{StaticResource Color.WindowBackground}" />
    <SolidColorBrush x:Key="Brush.WindowForeground" Color="{StaticResource Color.WindowForeground}" />
    <SolidColorBrush x:Key="Brush.PanelBackground" Color="{StaticResource Color.PanelBackground}" />
    <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Border}" />
    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Accent}" />
    <SolidColorBrush x:Key="Brush.AccentHover" Color="{StaticResource Color.AccentHover}" />
    <SolidColorBrush x:Key="Brush.ErrorText" Color="{StaticResource Color.ErrorText}" />

    <SolidColorBrush x:Key="Brush.GridHeaderBackground" Color="{StaticResource Color.GridHeaderBackground}" />
    <SolidColorBrush x:Key="Brush.GridHeaderForeground" Color="{StaticResource Color.GridHeaderForeground}" />
    <SolidColorBrush x:Key="Brush.GridRowBackground" Color="{StaticResource Color.GridRowBackground}" />
    <SolidColorBrush x:Key="Brush.GridRowAltBackground" Color="{StaticResource Color.GridRowAltBackground}" />
    <SolidColorBrush x:Key="Brush.GridRowSelectedBackground" Color="{StaticResource Color.GridRowSelectedBackground}" />
</ResourceDictionary>
