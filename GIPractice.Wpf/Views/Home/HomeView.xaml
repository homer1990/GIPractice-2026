<UserControl x:Class="GIPractice.Wpf.Views.Home.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:loc="clr-namespace:GIPractice.Wpf.Localization"
             xmlns:patients="clr-namespace:GIPractice.Wpf.Views.Patients">

    <Grid Background="{DynamicResource Brush.PanelBackground}">
        <StackPanel Margin="16" MaxWidth="700">
            <TextBlock Text="{loc:Loc Table=Home Field=Title}"
                   Style="{StaticResource PageTitleText}" />

            <TextBlock Text="{loc:Loc Table=Home Field=Welcome}"
                   Margin="0,0,0,16" />

            <!-- Pick patient button -->
            <Button Content="{loc:Loc Table=Home Field=SelectPatient}"
                Width="150"
                Padding="8,4"
                Margin="0,0,0,12"
                Command="{Binding PickPatientCommand}" />

            <!-- Selected patient card -->
            <Border Margin="0,0,0,12"
                Padding="8"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{loc:Loc Table=Home Field=SelectedPatient}"
                           FontWeight="Bold"
                           Margin="0,0,0,8" />

                    <patients:PatientCardView DataContext="{Binding SelectedPatient}" />
                </StackPanel>
            </Border>

            <TextBlock Margin="0,8,0,0"
                   Foreground="Gray"
                   Text="{Binding StatusMessage}" />
        </StackPanel>
    </Grid>
</UserControl>
