<UserControl x:Class="GIPractice.Wpf.Views.Patients.PatientsSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <DockPanel Margin="10">

        <!-- Search filters -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">

            <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                <TextBlock Text="Last name" />
                <TextBox Width="150"
                         Text="{Binding SearchCriteria.LastName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                <TextBlock Text="First name" />
                <TextBox Width="150"
                         Text="{Binding SearchCriteria.FirstName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                <TextBlock Text="Personal number" />
                <TextBox Width="150"
                         Text="{Binding SearchCriteria.PersonalNumber, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <Button Content="Search"
                    Margin="10,20,0,0"
                    Padding="12,4"
                    Command="{Binding SearchCommand}" />
            <Button Content="New patient"
                    Margin="10,20,0,0"
                    Padding="12,4"
                    Click="OnNewPatientClick" />
        </StackPanel>

        <!-- Results -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DataGrid Grid.Row="0"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                MouseDoubleClick="OnDataGridMouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" />
                    <DataGridTextColumn Header="Last name" Binding="{Binding LastName}" Width="*" />
                    <DataGridTextColumn Header="First name" Binding="{Binding FirstName}" Width="*" />
                    <DataGridTextColumn Header="Personal number" Binding="{Binding PersonalNumber}" Width="*" />
                    <DataGridTextColumn Header="Birth date" Binding="{Binding BirthDay}" Width="*" />
                    <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Paging -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,5,0,0">
                <Button Content="Prev"
                        Margin="0,0,5,0"
                        Command="{Binding PreviousPageCommand}" />
                <Button Content="Next"
                        Command="{Binding NextPageCommand}" />
                <TextBlock Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           Text="{Binding TotalCount, StringFormat='Total: {0}'}" />
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
