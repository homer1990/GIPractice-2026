<Window x:Class="GIPractice.Wpf.Views.Patients.PatientDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient details"
        Height="450"
        Width="600"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">

        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Save"
                    Width="80"
                    Margin="0,0,5,0"
                    Command="{Binding SaveCommand}" />
            <Button Content="Close"
                    Width="80"
                    IsCancel="True" />
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Last name -->
            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"
                       Text="Last name" />
            <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"
                     Text="{Binding Item.LastName, UpdateSourceTrigger=PropertyChanged}" />

            <!-- First name -->
            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"
                       Text="First name" />
            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"
                     Text="{Binding Item.FirstName, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Personal number -->
            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"
                       Text="Personal number" />
            <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"
                     Text="{Binding Item.PersonalNumber, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Birth date (simplified as text for now) -->
            <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"
                       Text="Birth date" />
            <TextBox Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"
                     Text="{Binding Item.BirthDay}" />
        </Grid>
    </DockPanel>
</Window>
