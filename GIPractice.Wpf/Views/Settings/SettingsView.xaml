<UserControl x:Class="GIPractice.Wpf.Views.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:loc="clr-namespace:GIPractice.Wpf.Localization">

    <Grid Background="{DynamicResource Brush.PanelBackground}">
        <StackPanel Margin="16" MaxWidth="500">
            <TextBlock Text="{loc:Loc Key=Settings_Title}"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,12" />

            <!-- API base URL -->
            <StackPanel Margin="0,0,0,8">
                <TextBlock Text="{loc:Loc Key=Settings_ApiBaseUrl}" />
                <TextBox Text="{Binding ApiBaseUrl, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,2,0,0" />
            </StackPanel>

            <!-- UI culture -->
            <StackPanel Margin="0,0,0,8">
                <TextBlock Text="{loc:Loc Key=Settings_UICulture}" />
                <ComboBox SelectedValue="{Binding UICulture, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBoxItem Content="English" Tag="en" />
                    <ComboBoxItem Content="Ελληνικά" Tag="el" />
                </ComboBox>
            </StackPanel>

            <TextBlock Margin="0,8,0,0"
                       Foreground="Gray"
                       Text="{loc:Loc Key=Settings_RestartHint}" />
        </StackPanel>
    </Grid>
</UserControl>
