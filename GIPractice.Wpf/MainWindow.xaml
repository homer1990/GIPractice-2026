<Window x:Class="GIPractice.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="GIPractice" Height="450" Width="800"
        Background="{StaticResource SurfaceBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Background="{StaticResource PrimaryBrush}" Padding="12">
            <DockPanel>
                <TextBlock FontSize="16" Foreground="White" FontWeight="Bold" Text="GIPractice Client" />
                <TextBlock DockPanel.Dock="Right" Foreground="White" Text="{Binding ViewController.StatusMessage}" />
            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <ContentControl Content="{Binding ViewController.CurrentViewModel}" />
            <Border Background="#88000000"
                    Visibility="{Binding ViewController.IsDimmed, Converter={StaticResource BoolToVisibility}}">
                <TextBlock Text="{Binding ViewController.Overlay}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="White" FontSize="16" />
            </Border>
        </Grid>
    </Grid>
</Window>
