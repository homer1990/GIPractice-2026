<Window x:Class="GIPractice.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:patients="clr-namespace:GIPractice.Wpf.Views.Patients"
        Title="GIPractice"
        Height="600"
        Width="1000">
    <DockPanel>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding ConnectionStatusText}" />
            </StatusBarItem>

            <StatusBarItem HorizontalAlignment="Right">
                <Button Content="Connect"
                        Command="{Binding ConnectCommand}"
                        Padding="8,2" />
            </StatusBarItem>
        </StatusBar>

        <!-- Main content: Patients search screen for now -->
        <patients:PatientsSearchView x:Name="PatientsSearchViewControl" />
    </DockPanel>
</Window>
