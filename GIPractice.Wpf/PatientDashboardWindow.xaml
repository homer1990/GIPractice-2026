<Window x:Class="GIPractice.Wpf.PatientDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:GIPractice.Wpf.Localization"
        Title="{loc:Loc Table=Dashboard Field=Title}"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.WindowBackground}"
        Foreground="{DynamicResource Brush.WindowForeground}">

    <!-- View is auto-selected via DataTemplate based on DataContext -->
    <ContentControl Content="{Binding}" />
</Window>
